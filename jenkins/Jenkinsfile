pipeline {
    environment {
        registry = "hackcoderr/php:latest" 
        registryCredential = 'docker-cred'
        dockerImage = ''
    }
    agent{
        label 'docker-swarm-node-1'
    }

    stages {
        stage('SCM') {
            steps {
                git 'https://github.com/hackcoderr/crud-app.git'
            }
        }
        stage('Build Image') { 
            steps { 
                script { 
                    dockerImage = docker.build registry  
                }
            } 
        }
        stage('Push Image') { 
            steps { 
                script { 
                    docker.withRegistry( '', registryCredential ) { 
                        dockerImage.push() 
                    }
                } 
            }
        }
        stage('Deployment') {
            steps {
                sh 'docker-compose up -d'
            }
        }
    }
}
